<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollViewTutor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/profile_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/TutorImg"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/circle"
                    android:scaleType="fitCenter"
                    android:src="@drawable/user2" />

                <LinearLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Hi, I'm"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/expandedToolbartutorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Denial"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:isIndicator="true"
                        android:maxHeight="20dp"
                        android:minHeight="5dp"
                        android:numStars="5"
                        android:progressTint="@color/yellow" />

                    <LinearLayout
                        android:id="@+id/credit_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp">


                        <TextView
                            android:id="@+id/availableTutorListCPS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="#85929E"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credits/Min"
                            android:textColor="#85929E"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttons_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageButton
                            android:id="@+id/imageButton3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:scaleType="fitCenter"
                            android:src="@drawable/message" />

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"></LinearLayout>

                        <ImageButton
                            android:id="@+id/imageButton6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:scaleType="fitCenter"
                            android:src="@drawable/disabled_video" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subjects_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <!--<TextView-->
                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Subjects"
                        android:textColor="#616A6B"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <WebView
                            android:id="@+id/TutorExpanded_tutorin_languages_webview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView9"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="fill_vertical"
                            android:layout_marginLeft="-13dp"
                            android:gravity="start"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/TutorExpanded_tutorin_languages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            />

                        <ProgressBar
                            android:id="@+id/TutorExpanded_tutorin_languages_progress"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                </LinearLayout>


                <!--<TextView-->
                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:textColor="#616A6B"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/expanded_fullscreen"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:src="@mipmap/ic_full_screen"
                    android:textAlignment="viewEnd" />

                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:id="@+id/exo_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="About Me"
                        android:textColor="#616A6B"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--<TextView-->


                <!--<at.blogc.android.views.Expandableme.grantland.widget.AutofitTextView-->
                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/TutorExpanded_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/personal"
                    app:animation_duration="750" />


                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/TutorExpanded_personal_alter"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:weightSum="3">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <Button
                        android:id="@+id/button_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:text="More..."
                        android:textAllCaps="false"
                        android:textColor="#03A9F4"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eduLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <!--<TextView-->
                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:text="Educational"
                    android:textColor="#616A6B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/TutorExpanded_educational"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/personal"
                    android:textColor="#616A6B"
                    android:textSize="12sp"
                    app:animation_duration="1000" />

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/TutorExpanded_educational_alter"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:weightSum="3">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <Button
                        android:id="@+id/moreedu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:text="More..."
                        android:textAllCaps="false"
                        android:textColor="#03A9F4"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/proLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <!--<TextView-->
                <me.grantland.widget.AutofitTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Professional"
                    android:textColor="#616A6B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/TutorExpanded_professional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/personal"
                    android:textColor="#616A6B"
                    android:textSize="12sp"
                    app:animation_duration="1000" />

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/TutorExpanded_professional_alter"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:weightSum="3">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <Button
                        android:id="@+id/moreprof"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:text="More..."
                        android:textAllCaps="false"
                        android:textColor="#03A9F4"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#616A6B" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ratingLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <RelativeLayout
                        android:id="@+id/Review_heading_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Reviews"
                            android:textColor="#616A6B"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">


                            <Button
                                android:id="@+id/moreList"
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:background="#00000000"
                                android:text="More..."
                                android:textAllCaps="false"
                                android:textColor="#03A9F4"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/TutorExpanded_review_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/minus"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/rating_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="out of 5"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/TutorExpanded_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textAlignment="viewStart"
                        android:textColor="#616A6B"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/review_root_expanded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>