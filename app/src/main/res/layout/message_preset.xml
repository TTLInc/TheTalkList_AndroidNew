<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp">
                    <Button
                        android:layout_height="35dp"
                        android:layout_width="wrap_content"
                        android:theme="@style/PresetButton"
                        android:text = "  Hey! How are you?  "
                        android:background ="@drawable/presetbuttonrounded"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp">
                    <Button
                        android:layout_height="35dp"
                        android:layout_width="wrap_content"
                        android:theme="@style/PresetButton"
                        android:text = "  When are you available?  "
                        android:background ="@drawable/presetbuttonrounded"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp">
                    <Button
                        android:layout_height="35dp"
                        android:layout_width="wrap_content"
                        android:theme="@style/PresetButton"
                        android:text = "  Can you tutor right now?  "
                        android:background ="@drawable/presetbuttonrounded"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp">
                    <Button
                        android:layout_height="35dp"
                        android:layout_width="wrap_content"
                        android:theme="@style/PresetButton"
                        android:text = "  What subject?  "
                        android:background ="@drawable/presetbuttonrounded"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp">
                    <Button
                        android:layout_height="35dp"
                        android:layout_width="wrap_content"
                        android:theme="@style/PresetButton"
                        android:text = "  Yes! Call me.  "
                        android:background ="@drawable/presetbuttonrounded"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp">
                    <Button
                        android:layout_height="35dp"
                        android:layout_width="wrap_content"
                        android:theme="@style/PresetButton"
                        android:text = "  I'm busy right now.  "
                        android:background ="@drawable/presetbuttonrounded"
                        />
                </LinearLayout>

            </LinearLayout>





        </HorizontalScrollView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>