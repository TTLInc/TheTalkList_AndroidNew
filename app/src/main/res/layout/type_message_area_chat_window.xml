<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/message_onetoone_attachment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:visibility="gone"
        android:src="@drawable/attachment" />

    <com.rockerhieu.emojicon.EmojiconEditText
        android:id="@+id/message_editText_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:hint="Write a message"
        android:imeOptions="actionSend"
        android:inputType="textMultiLine|textShortMessage"
        android:maxLines="3"
        android:textColor="#7F8C8D"
        android:textColorHint="#7F8C8D" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:paddingRight="-11dp"
            android:paddingTop="-5dp"
            android:paddingBottom="4dp"
            android:src="@drawable/document_icon" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/keyboard_open"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/smiley" />

        <ImageView
            android:id="@+id/message_sendBtn"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:paddingBottom="5dp"
            android:paddingTop="-5dp"
            android:paddingLeft="-5dp"
            android:paddingRight="-5dp"
            android:src="@drawable/circle_paper"
            />



        <ImageView
            android:id="@+id/message_searchBtn"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:background="#FF6634"
            android:src="@mipmap/ic_search"
            />

    </LinearLayout>


</LinearLayout>